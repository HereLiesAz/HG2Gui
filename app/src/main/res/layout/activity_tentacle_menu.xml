<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tentacle_bg">

    <!-- Tentacle Drawing Layer -->
    <com.hereliesaz.hg2gui.commands.tentacle.TentacleView
        android:id="@+id/tentacle_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- HELP Node (Center) -->
    <LinearLayout
        android:id="@+id/node_help"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:background="@drawable/bg_tentacle_node"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HELP"
            android:textColor="@color/tentacle_primary"
            android:textSize="14sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- GUIDE Node (Top Left) -->
    <!-- Positioned via margins to match TentacleView 20% X, 26% Y approximate -->
    <LinearLayout
        android:id="@+id/node_guide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="120dp"
        android:background="@drawable/bg_tentacle_node"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GUIDE"
            android:textColor="@color/tentacle_primary"
            android:textSize="16sp"
            android:textStyle="bold"
            android:letterSpacing="0.1" />
    </LinearLayout>

    <!-- MANUAL Node (Top Right) -->
    <LinearLayout
        android:id="@+id/node_manual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="40dp"
        android:layout_marginTop="120dp"
        android:background="@drawable/bg_tentacle_node"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MANUAL"
            android:textColor="@color/tentacle_primary"
            android:textSize="16sp"
            android:textStyle="bold"
            android:letterSpacing="0.1" />
    </LinearLayout>

    <!-- TIPS Node (Bottom) -->
    <LinearLayout
        android:id="@+id/node_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="100dp"
        android:background="@drawable/bg_tentacle_node"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TIPS"
            android:textColor="@color/tentacle_primary"
            android:textSize="16sp"
            android:textStyle="bold"
            android:letterSpacing="0.1" />
    </LinearLayout>

    <!-- CRT Scanline Overlay -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/scanline_pattern"
        android:alpha="0.1" />

</RelativeLayout>
