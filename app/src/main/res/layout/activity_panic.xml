<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/panic_background"
    android:orientation="vertical"
    android:padding="0dp">

    <!-- Top App Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E64a0000"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:orientation="horizontal">

        <!-- Warning Icon Placeholder -->
        <View
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/panic_card_bg" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SYSTEM CRITICAL"
                android:textColor="#FEE2E2"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CODE: RED-42"
                android:textColor="#F87171"
                android:textSize="12sp"
                android:typeface="monospace" />
        </LinearLayout>

        <!-- Settings Icon Placeholder -->
        <View
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/panic_card_bg" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Headline -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="32dp"
                android:paddingBottom="32dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DON'T"
                    android:textColor="#fbbf24"
                    android:textSize="56sp"
                    android:textStyle="bold"
                    android:rotation="-2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PANIC"
                    android:textColor="#fbbf24"
                    android:textSize="56sp"
                    android:textStyle="bold"
                    android:rotation="3"
                    android:layout_marginTop="-10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Guide Mk.II Panic Protocols Engaged"
                    android:textColor="#FECACA"
                    android:textSize="14sp"
                    android:background="@drawable/panic_card_bg"
                    android:padding="8dp"
                    android:layout_marginTop="16dp"
                    android:textAllCaps="true" />
            </LinearLayout>

            <!-- Visual Sensors -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Visual Sensors // Hazard Detection"
                android:textColor="#F87171"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:layout_marginBottom="12dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="@drawable/panic_card_bg"
                    android:layout_marginEnd="8dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:src="@drawable/towel"
                        android:scaleType="centerInside"
                        android:padding="8dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="OBJ: TOWEL"
                        android:textColor="#FECACA"
                        android:textSize="10sp"
                        android:gravity="center"
                        android:background="#99000000"
                        android:padding="4dp"
                        android:typeface="monospace"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="@drawable/panic_card_bg"
                    android:layout_marginEnd="8dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:src="@drawable/pot"
                        android:scaleType="centerInside"
                        android:padding="8dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="OBJ: POT"
                        android:textColor="#FECACA"
                        android:textSize="10sp"
                        android:gravity="center"
                        android:background="#99000000"
                        android:padding="4dp"
                        android:typeface="monospace"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="@drawable/panic_card_bg">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:src="@drawable/whale"
                        android:scaleType="centerInside"
                        android:padding="8dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="OBJ: WHALE"
                        android:textColor="#FECACA"
                        android:textSize="10sp"
                        android:gravity="center"
                        android:background="#99000000"
                        android:padding="4dp"
                        android:typeface="monospace"/>
                </LinearLayout>

            </LinearLayout>

            <!-- Terminal Output -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Terminal Output"
                android:textColor="#F87171"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"/>

            <LinearLayout
                android:id="@+id/panic_terminal_output"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/panic_terminal_bg"
                android:orientation="vertical"
                android:padding="16dp">
                <!-- Content added dynamically or statically -->
                <TextView
                    android:id="@+id/panic_message_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="> ERR: Probability drive at 0%."
                    android:textColor="#EF4444"
                    android:typeface="monospace"
                    android:textSize="14sp"/>

                 <!-- Additional static logs -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="> WARN: Tea supplies exhausted."
                    android:textColor="#FBBF24"
                    android:typeface="monospace"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"/>
                 <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="> SYS: Deep Thought calculating..."
                    android:textColor="#0DB9F2"
                    android:typeface="monospace"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"/>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- Bottom Button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@drawable/panic_background"> <!-- To cover content behind -->

        <Button
            android:id="@+id/panic_button"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/panic_button_bg"
            android:text="INITIATE CALM"
            android:textColor="#101e23"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PRESS TO RESTORE FACTORY SERENITY"
            android:textColor="#99F87171"
            android:textSize="10sp"
            android:gravity="center"
            android:typeface="monospace"
            android:layout_marginTop="8dp"/>

    </LinearLayout>

</LinearLayout>
