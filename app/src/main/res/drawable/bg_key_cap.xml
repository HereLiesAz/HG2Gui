<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/hg_primary" />
            <corners android:radius="6dp" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@color/hg_key_bg" />
            <corners android:radius="6dp" />
            <stroke android:width="1dp" android:color="#00000000" /> <!-- Invisible stroke for spacing if needed -->
        </shape>
    </item>
</selector>