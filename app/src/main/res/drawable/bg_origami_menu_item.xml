<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#2213ec6a"/> <!-- Primary/10 roughly -->
            <stroke android:width="1dp" android:color="@color/origami_primary"/>
            <corners android:radius="8dp"/>
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@color/origami_background_dark"/>
            <stroke android:width="1dp" android:color="@color/origami_primary"/>
            <corners android:radius="8dp"/>
        </shape>
    </item>
</selector>